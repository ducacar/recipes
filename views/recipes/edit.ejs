<% layout ("layouts/boilerplate") %>
<main class="container">
  <div>
    <a class="btn btn-warning" href="/recipes/<%= recipe._id %>"
      >Back to recipe</a
    >
  </div>
  <h1>Edit recipe</h1>
  <div class="col-6 offset-3">
    <form action="/recipes/<%= recipe._id %>?_method=PUT" method="post">
      <div>
        <div>
          <label class="edit-label" for="title">Title</label>
        </div>
        <input
          class="form-control mt-2"
          type="text"
          id="title"
          name="recipe[title]"
          value="<%= recipe.title %>"
        />
      </div>
      <div>
        <div>
          <label class="edit-label" for="description">Description</label>
        </div>
        <textarea
          class="form-control mt-2"
          id="description"
          name="recipe[description]"
        >
<%= recipe.description %></textarea
        >
      </div>
      <div>
        <div>
          <label class="edit-label" for="ingredients">Ingredients</label>
        </div>
        <textarea
          class="form-control mt-2"
          id="ingredients"
          name="recipe[ingredients]"
        >
<%= recipe.ingredients %></textarea
        >
      </div>
      <div>
        <div>
          <label class="edit-label" for="instructions">Instructions</label>
        </div>
        <textarea
          class="form-control mt-2"
          id="instructions"
          name="recipe[instructions]"
        >
<%= recipe.instructions %></textarea
        >
      </div>
      <div>
        <button class="btn btn-danger mt-3">Save changes</button>
      </div>
    </form>
  </div>
</main>

<script src="/javascripts/editTextarea.js"></script>
